<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.video.cineroom" version="4.3.2" name="cineroom" provider-name="Gael">
  <requires>
    <import addon="xbmc.python" version="3.0.0"/>
  </requires>

  <!-- Extensão principal do plugin -->
  <extension point="xbmc.python.pluginsource" library="main.py">
    <provides>video</provides>
  </extension>

  <!-- Serviço de monitoramento -->
  <extension point="xbmc.service" library="service.py" start="startup"/>

  <!-- Metadados do addon -->
  <extension point="xbmc.addon.metadata">
    <summary lang="pt_BR">Addon de exemplo para demonstração no Kodi.</summary>
    <description lang="pt_BR">Addon scraper. não hospedamos nenhum tipo de conteudo</description>
    <disclaimer lang="pt_BR">Este addon é apenas para fins educacionais e não hospeda nenhum conteúdo próprio.</disclaimer>
    <platform>all</platform>
    <license>GPL-3.0-only</license>
    <source>https://cinerrom1.github.io</source>
    <email>cineroom.ofc@gmail.com</email>
    <assets>
      <icon>resources/images/icon.png</icon>
      <fanart>resources/images/fanart.jpg</fanart>
      <screenshot>resources/images/screenshot-1.jpg</screenshot>
      <screenshot>resources/images/screenshot-2.jpg</screenshot>
      <screenshot>resources/images/screenshot-3.jpg</screenshot>
    </assets>
  </extension>
</addon>
<addon id="repository.cineroom" name="Cineroom Repo" version="1.0.0" provider-name="Gael">
  <requires>
    <import addon="xbmc.addon" version="12.0.0"/>
  </requires>
  <extension point="xbmc.addon.repository" name="Cineroom Repository">
    <dir>
      <info compressed="false">https://raw.githubusercontent.com/cineroom1/repo.cineroom/main/addons.xml</info>
      <checksum>https://raw.githubusercontent.com/cineroom1/repo.cineroom/main/addons.xml.md5</checksum>
      <datadir>https://raw.githubusercontent.com/cineroom1/repo.cineroom/main/repo/</datadir>
      <hashes>false</hashes>
    </dir>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>Repositório oficial Cineroom</summary>
    <description>Repositório com os addons oficiais do Cineroom</description>
    <platform>all</platform>
	<assets>
      <icon>icon.png</icon>
    </assets>
  </extension>
</addon>
</addons>
