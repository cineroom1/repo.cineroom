<addon id="plugin.video.cineroom" version="4.3.2" name="cineroom" provider-name="Gael">
  <requires>
    <import addon="xbmc.python" version="3.0.0"/>
  </requires>

  <!-- Extensão principal do plugin -->
  <extension point="xbmc.python.pluginsource" library="main.py">
    <provides>video</provides>
  </extension>

  <!-- Serviço de monitoramento -->
  <extension point="xbmc.service" library="service.py" start="startup"/>

  <!-- Metadados do addon -->
  <extension point="xbmc.addon.metadata">
    <summary lang="pt_BR">Addon de exemplo para demonstração no Kodi.</summary>
    <description lang="pt_BR">Addon scraper. não hospedamos nenhum tipo de conteudo</description>
    <disclaimer lang="pt_BR">Este addon é apenas para fins educacionais e não hospeda nenhum conteúdo próprio.</disclaimer>
    <platform>all</platform>
    <license>GPL-3.0-only</license>
    <source>https://cinerrom1.github.io</source>
    <email>cineroom.ofc@gmail.com</email>
    <assets>
      <icon>resources/images/icon.png</icon>
      <fanart>resources/images/fanart.jpg</fanart>
      <screenshot>resources/images/screenshot-1.jpg</screenshot>
      <screenshot>resources/images/screenshot-2.jpg</screenshot>
      <screenshot>resources/images/screenshot-3.jpg</screenshot>
    </assets>
  </extension>
</addon>
