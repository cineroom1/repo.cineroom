<window type="dialog">
    <coordinates>
        <system>1</system>
    </coordinates>

    <controls>
        <!-- Fundo transparente -->
        <control type="image" id="99">
            <left>0</left>
            <top>0</top>
            <width>100%</width>
            <height>100%</height>
            <texture>special://home/addons/script.module.pil/resources/media/transparent.png</texture>
        </control>

        <!-- Container principal com ajuste fino -->
        <control type="group">
            <!-- Ajuste "dois dedos esquerda" e "um dedo alto" -->
            <left>50% - 300</left>  <!-- +50px para esquerda (original 250) -->
            <top>50% - 220</top>    <!-- +50px para cima (original 170) -->
            <width>500</width>
            <height>340</height>

            <!-- Imagem -->
            <control type="image" id="100">
                <left>-220</left>
                <top>-150</top>
                <width>500</width>
                <height>300</height>
                <texture fallback="DefaultFolder.png">special://home/addons/plugin.video.cineroom/resources/images/donation.jpg</texture>
                <aspectratio>keep</aspectratio>
                <animation effect="fade" start="0" end="100" time="400">WindowOpen</animation>
            </control>

            <!-- Texto com ajuste fino -->
            <control type="label" id="101">
                <left>-221</left>
                <top>170</top>
                <width>500</width>
                <height>40</height>
                <font>font13_title</font>
                <textcolor>FFFFFFFF</textcolor>
                <shadowcolor>AA000000</shadowcolor>
                <align>center</align>
                <label>[COLOR yellow]Muito obrigado pelo seu apoio![/COLOR]</label>
                <animation effect="slide" end="0,-10" time="300" delay="200">WindowOpen</animation>
            </control>
        </control>
    </controls>
</window>